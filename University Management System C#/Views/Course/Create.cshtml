      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AdminHome">Home</a>
           <li class="nav-item">
            <a  class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Index">Manage Students</a>
