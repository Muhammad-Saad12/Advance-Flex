  <div class="container">
      <form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Course</h2>
            <hr />
        </div>
       <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" />
           <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CreditHour"></label>
            <input asp-for="CreditHour" class="form-control" />
           @* <span asp-validation-for="Name" class="text-danger"></span>*@
        </div>
         <div class="mb-3">
            <label asp-for="GradingPolicy"></label>
            <input asp-for="GradingPolicy" class="form-control" />
           @* <span asp-validation-for="Expertise" class="text-danger"></span>*@
           <br/>
        </div>
         
        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
        <a asp-controller="Course" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back to List
        </a>
        <br/><br/>
    </div>

</form>
</div>
