    <br/><br/><br/><br/>
	@*<partial name="_Notification" />*@
    <div class ="container p-4">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Enrolled Teachers</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Teacher" asp-action="Create" class="btn btn-primary">
                   <i class="bi bi-plus-circle"></i> &nbsp Add New Teacher
                </a>

            </div>
        </div>
        <br /><br />


    <table  class="table table-bordered table-striped" style="width:100%"> 
        <thead></thead>
        <tr>
            <th>
               Teacher ID
            </th>
            <th>
               Teacher Name
            </th>
            <th>
                Expertise
            </th>
            <th>
               Teacher Enrolled Department
            </th>
            <th></th>
        </tr>
        <tbody>
            @foreach (var obj in Model)
            {   <tr>
                     <td width="10%">
                        @obj.Id

                     </td>
                   <td width="20%">
                         @obj.FirstName

                     </td>
                     <td width="20%">
                         @obj.Expertise

                     </td>
                     <td width="20%">
                         @obj.Department

                     </td>
                     <td>
                     <div class="w-75 btn-group" role="group">
                         <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@obj.Id"
                         class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                          <a asp-controller="Teacher" asp-action="Delete" asp-route-id="@obj.Id"
                         class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</a>
                     </div>

                     </td>
                </tr>
            
            }
        </tbody>
    </table>
    </div>
    <br/><br/><br/><br/><br/><br/>

</body>