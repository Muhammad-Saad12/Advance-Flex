@model IEnumerable<Teacher>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title> Manage Teachers</title>

  <link rel="stylesheet" href="~/css/facultycard.css" asp-append-version="true" />
