  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/css/imagehover.min.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  

</head>
<body>
<!--Navigation bar-->
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand">Auq<span>aat</span></a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
         <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AdminHome">Home</a>
           <li class="nav-item">
            <a  class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Index">Manage Students</a>
           </li>
            <li class="nav-item">
            <a  class="nav-link text-dark" asp-area="" asp-controller="Teacher" asp-action="TeacherIndex">Manage Teachers</a>
           </li>
           <li class="nav-item">
            <a  class="nav-link text-dark" asp-area="" asp-controller="Course" asp-action="Index">Manage Courses</a>
           </li>
           <li class="nav-item">
             <a class="nav-link text-dark" asp-area="" asp-controller="Announcement" asp-action="Index">Make an Announcement</a>
           </li>
           <li class="nav-item">
             <a class="nav-link text-dark" asp-area="" asp-controller="AssignTeacher" asp-action="Index">Assign Teachers</a>
