	<form method="post">
		@foreach (var obj in Model)
		{
			<div class="container abc">
    
                <div class="row sett d-flex justify-content-center">
        
                    <div class="col-md-7">
            
                        <div class="card p-3 py-4">
                
                
                            <div class="text-center mt-3" style="text-align:center">
                                <span class="bg-secondary fac p-1 px-10 rounded text-white">@obj.Department</span>
                                <h5 class="mt-2 mb-0">@obj.FirstName @obj.LastName</h5>
                                <span>@obj.Expertise</span>
                    
                    
                            </div>
                            <ul class="social-list">
                                <li><i class="fa fa-facebook"></i></li>
                                <li><i class="fa fa-github"></i></li>
                                <li><i class="fa fa-linkedin"></i></li>
                                <li><i class="fa fa-google"></i></li>
                            </ul>
               
                
                
                        </div>
            
                    </div>
        
                </div>
    
            </div>
