<br/><br/><br/><br/><br/><br/>
@*<partial StudentId="_Notification" />*@
<div class ="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Course List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="RegisterCourse" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp Add new Course
            </a>

        </div>
    </div>
    <br /><br />


<table  class="table table-bordered table-striped" style="width:100%">
    <thead></thead>
    <tr>
        <th>
            Student Id
        </th>
        <th>
            Course Id
        </th>
        <th></th>
    </tr>
    <tbody>
        @foreach (var obj in Model)
        {   <tr>
                 <td width="50%">
                     @obj.StudentId

                 </td>
               <td width="30%">
                     @obj.CourseId

                 </td>
                 <td>
                 <div class="w-75 btn-group" role="group">
                     <a asp-controller="RegisterCourse" asp-action="Edit" asp-route-id="@obj.Id"
                     class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                      @*<a asp-controller="RegisterCourse" asp-action="Delete" asp-route-id="@obj.Id"
                     class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</a>*@
                 </div>

                 </td>
            </tr>
            
        }
    </tbody>
</table>
</div>
<br/><br/><br/>
</body>